<Window x:Class="_06._06SP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06._06SP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="450" Width="800">
        <Menu Height="25" VerticalAlignment="Top" Width="800">
            <MenuItem Header="File">
                <MenuItem Name="CreateItem" Header="Create..." Click="CreateItemClick"/>
                <MenuItem Name="OpenItem" Header="Open..." Click="OpenItemClick"/>
                <MenuItem Header="Save"/>
                <MenuItem Name="SaveAsItem" Header="Save As ..." Click="SaveAsItemClick"/>
                <MenuItem Header="Page Setup..."/>
                <MenuItem Header="Print..."/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            
            <MenuItem Header="Reference">
                <MenuItem Header="See help"/>
                <MenuItem Header="About the program"/>
            </MenuItem>
        </Menu>
        <RichTextBox Name="richTextBox" HorizontalAlignment="Left" Height="395" Margin="0,25,0,0" VerticalAlignment="Top" Width="790"/>

    </Grid>
</Window>